{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "declaration": true,

    "strict": true,
    "alwaysStrict": true,

    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": false
  },
  "exclude": [
    "__tests__/**/*.ts",
    "node_modules",
    "dist"
  ]
}

